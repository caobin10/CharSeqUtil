<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/common_mid_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_value1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/body_text_color_common"
            android:textSize="@dimen/common_mind_text_size" />

        <TextView
            android:id="@+id/tv_value2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_mid_padding"
            android:singleLine="true"
            android:textColor="@color/body_text_color_common"
            android:textSize="@dimen/common_mind_text_size" />

        <TextView
            android:id="@+id/tv_value3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding"
            android:singleLine="true"
            android:textColor="@color/body_text_color_common"
            android:textSize="@dimen/common_mind_text_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="25.0dip"
        android:layout_height="25.0dip"
        android:contentDescription="@string/no_word_view"
        android:paddingLeft="@dimen/common_padding"
        android:src="@drawable/ic_arrow_right" />
</LinearLayout>
