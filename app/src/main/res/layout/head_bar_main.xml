<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/head_bar_heigh_common"
    android:gravity="center_vertical"
    android:background="@color/white"
    android:orientation="horizontal">

    <org.chuck.view.RoundImageView
        android:id="@+id/riv_user_avatar"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5.0dp"
        android:layout_centerVertical="true"
        android:contentDescription="@string/no_word_view"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/tv_head_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/main_new_msg"
        android:textSize="@dimen/head_bar_text_size_common"
        android:textColor="@color/red"/>

</RelativeLayout>
